<?xml version="1.0" encoding="iso-8859-1"?>
<root version="3.3" release="1.0">
	<announcement text="Loaded the ArmorFrames extension." font="emotefont" />
	<properties>
		<name>Armor Frames</name>
		<version>0.1</version>
		<author>George Taray</author>
		<description>Modifies base 5e rules for armor classifications, and adds options for armor to use different frames.</description>
	</properties>
	<base>
		<!-- This file is our main Lua file. You can name it what you want, but you must use xml restrictions in order to do that.-->
		<script name="ArmorFrames" file="scripts/armorFrames.lua" />

		<!-- Campaign -->
		<includefile source="campaign/templates.xml" />
		
		<includefile source="campaign/record_char_main.xml" />
		<includefile source="campaign/record_char_inventory.xml" />
		<includefile source="campaign/record_char_weapon.xml" />
		<includefile source="campaign/record_item.xml" />
		<script name="CharManager" file="campaign/scripts/manager_char.lua" />

		<!-- Strings -->
		<includefile source="strings/strings.xml" />
	</base>
</root>