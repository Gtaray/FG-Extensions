		<!-- Desktop -->
		<includefile source="desktop/desktop_classes.xml" />
		<includefile source="desktop/desktop_templates.xml" />

		<!-- Graphics -->
		<includefile source="graphics/graphics_icons.xml"/>

		<!-- Scripts -->
		<script name="CombatManager2" file="scripts/manager_combat2.lua" />
	</base>
</root>