	<properties>
		<name>Room Targets</name>
		<version>1.0</version>
		<author>George Taray</author>
		<description>Modifies base 5e rules to use the Room Target from Index Card RPG.</description>
	</properties>
	<base>
		<includefile source="gameelements.xml" />

		<!-- This file is our main Lua file. You can name it what you want, but you must use xml restrictions in order to do that.-->
